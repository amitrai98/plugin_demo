<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="@drawable/round_rectangle_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <RelativeLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_tipsent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/tip_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_tipsent"
                android:layout_toRightOf="@+id/img_tipsent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:text="10 tips sent"
                android:textColor="@color/credit_added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>



</RelativeLayout>