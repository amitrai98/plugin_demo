<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <RelativeLayout
            android:background="@drawable/rectangle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout_close"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView
                android:layout_below="@+id/layout_close"
                android:id="@+id/txt_creditbal"
                android:text="You have 81.46 credits"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <RelativeLayout
                android:layout_below="@+id/txt_creditbal"
                android:layout_above="@+id/layout_success"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <LinearLayout
                    android:id="@+id/layout_addmore"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/img_add"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txt_addmore"
                        android:src="@drawable/add"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                    <TextView
                        android:id="@+id/txt_addmore"
                        android:padding="3dp"
                        android:text="ADD MORE"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/layout_success"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_above="@+id/img_creditadded"
                    android:id="@+id/txt_creditadded"
                    android:text="CREDITS ADDED"
                    android:textColor="@color/credit_added"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/img_creditadded"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/credit"
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

        </RelativeLayout>

</LinearLayout>